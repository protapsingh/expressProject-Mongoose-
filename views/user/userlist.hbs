<h3>{{viewTitle}}</h3>
<table class="table table-striped">
<thead>
    <th>Fullname</th>
    <th>Email</th>
    <th>Mobile</th>
    <th>City</th>
    <th>Image</th>
    <th>Actions</th>
</thead>
<tbody>
{{#each list}}
<tr>
<td>{{this.fullname}}</td>
<td>{{this.email}}</td>
<td>{{this.mobile}}</td>
<td>{{this.city}}</td>
<td><img src="/uploads/{{this.image}}"style="height:70px; width:80px; border-radius:30px;"></td>

<td>
    <a href="/user/edit/{{this._id}}" class="btn btn-info" title="Edit"><i class="fa fa-pencil"></i></a>&nbsp;
    <a href="/user/delete/{{this._id}}" class="btn btn-danger" title="Delete" onclick="return confirm('are you sure you want to delete this?')"><i  class="fa fa-trash"></i></a>
</td>

{{/each}}
</tr>
</tbody>
</table>