<h3>{{viewTitle}}</h3>
<div class="text-danger">
       {{message}}
</div>

<form action="/user/signup" enctype="multipart/form-data"  method="post">
    <div class="form-group col-md-6">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullname" placeholder="Fullname" value="{{user.fullname}}">
        <div class="text-danger">
        {{user.fullNameError}}
        </div>
    </div>
    <div class="form-group col-md-6">
        <label>Email</label>
        <input type="email" class="form-control" name="email" placeholder="Email Address" value="{{user.email}}">
        <div class="text-danger">
        {{user.emailError}}
        </div>
    </div>
     <div class="form-group col-md-6">
        <label>Password</label>
        <input type="password" class="form-control" name="password" placeholder="password">
        <div class="text-danger">
        {{user.passwordError}}
        </div>
    </div>
    <div class="form-group col-md-6">
        <label>City</label>
        <input type="text" class="form-control" name="city" placeholder="City" value="{{user.city}}">
        <div class="text-danger">
        {{user.cityError}}
        </div>
    </div>
    <div class="form-group col-md-6">
        <label>Mobile</label>
        <input type="text" class="form-control" name="mobile" placeholder="Mobile Number" value="{{user.mobile}}">
        <div class="text-danger">
        {{user.mobileError}}
        </div>
    </div>
    <div class="form-group col-md-6">
        <label>Image</label>
        <input type="file" class="form-control" name="image">
        <div class="text-danger">
        {{user.imageError}}
        </div>
    </div>
    <div class="form-group">
    <center>
        <button type="submit" class="btn btn-success"><i class="fa fa-database">Submit Now</i></button>
        <p></br> Already registered???<a href="/user/login"> Login Now!</a></p></center>
    </center>
    </div>
</form>